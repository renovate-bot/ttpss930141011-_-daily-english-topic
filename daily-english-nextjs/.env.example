# AI Services Configuration

# OpenAI API Key - for voice features (Whisper, TTS), GPT-4 chat, and Realtime API
# Get your API key from: https://platform.openai.com/api-keys
# Required for: Realtime voice conversations, text generation, and voice synthesis
# SECURITY: Never expose this key to the client side
OPENAI_API_KEY=

# Google Gemini API Configuration - for AI responses (fallback)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Google Translate API Configuration (Recommended for Production)
# Faster and more accurate for quick translations
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_TRANSLATE_API_KEY=

# Azure OpenAI API Key - for daily topic generation
# Get your API key from: https://portal.azure.com/
AZURE_API_KEY=

# Translation Strategy Configuration
# QUICK: Use Google Translate for speed (recommended for production)
# EDUCATIONAL: Use Gemini for learning context (better for detailed explanations)
DEFAULT_TRANSLATION_STRATEGY=QUICK

# Optional: Dictionary API Configuration
# If you want to use a premium dictionary service
DICTIONARY_API_KEY=

# Optional: Analytics
# Google Analytics or other tracking services
NEXT_PUBLIC_GA_ID=

# Optional: Voice Service Configuration
# VOICE_MODEL=gpt-4-turbo-preview
# VOICE_TTS_MODEL=tts-1        # or tts-1-hd for higher quality
# VOICE_DEFAULT_VOICE=nova     # Options: alloy, echo, fable, onyx, nova, shimmer
# VOICE_DEFAULT_LANGUAGE=en

# Realtime API Configuration (for voice teaching feature)
# REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
# REALTIME_VOICE=alloy        # Options: alloy, echo, fable, onyx, nova, shimmer
# REALTIME_TEMPERATURE=0.8
# REALTIME_MAX_TOKENS=4096

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_DEEP_EXPLANATIONS=true
NEXT_PUBLIC_ENABLE_TRANSLATIONS=true
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh-TW
NEXT_PUBLIC_ENABLE_VOICE_TEACHER=true

# Security Configuration (Production)
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_WHITELIST_IPS=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://eng.zeabur.app

# Logging
LOG_LEVEL=info
LOG_REQUESTS=false

# Node Environment
NODE_ENV=production

# NextAuth Configuration (REQUIRED)
# Generate with: npx auth secret
AUTH_SECRET=

# OAuth Providers
# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Database (REQUIRED)
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/daily-english

# NextAuth URL (Required for production)
# The URL of your application (without trailing slash)
# Example: https://eng.justinxiao.app
NEXTAUTH_URL=https://yourdomain.com

# Redis Configuration (Optional, for future horizontal scaling)
# REDIS_URL=redis://localhost:6379

# Monitoring (Recommended for production)
# Get your DSN from: https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
# For source map uploads during build (optional)
# SENTRY_AUTH_TOKEN=

# Usage Tracking (Optional, not implemented yet)
# ENABLE_USAGE_TRACKING=true
# USAGE_WEBHOOK_URL=

# Cost Control (Optional, not implemented yet)
# DAILY_COST_LIMIT=10
# MONTHLY_COST_LIMIT=300
